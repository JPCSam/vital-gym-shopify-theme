                </button>
              {% endif %}

              <span>
                {{ block.settings.banner_item_text }}
              </span>
              {% comment %}
                {% if block.settings.show_klarna != blank %}
                  <a href="#">Learn More</a>
                {% endif %}
              {% endcomment %}
              {% if block.settings.banner_item_link_text != blank %}
                <a href="{{block.settings.banner_item_link_url}}">{{ block.settings.banner_item_link_text }} </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="btn-wrap" style="height: 100% !important;">
      {% if customer %}
      {% else %}
        <button class="btn btn--transparent open-custom-modal" id="open-login-modal">Log In</button>
        <button class="btn btn--inverse open-custom-modal open_signup" id="open-signup-modal">Sign Up</button>
      {% endif %}
    </div>
  </div>
</div>
{%- comment -%}<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>{%- endcomment -%}

<style>
    .header-banner {
      background: #1c1c1d;
      opacity: 0.9;
      padding: 6px 15px;
      height: 40px;
    }
    klarna-placement {
      display: none !important;
    }
    .header-banner .banner-item-inner {
      display: flex;
      justify-content: center;
      align-items: center;
      color: #fff;
      flex-wrap: wrap;
    }
    .header-banner .slick-track {
      display: flex;
      align-items: center;
    }
    .header-banner .banner-container {
      max-width: 1300px;
      margin: 0 auto;
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      display: flex;
      flex-direction: row;
    }

    .header-banner .banner-slider-container {
      display: flex;
      max-width: 720px;
      margin: 0 auto;
      justify-content: center;
      align-items: center;
    }
    .header-banner .banner-item-inner p {
      margin-bottom: 0;
      color: #f0f0f0;
      font-weight: 100;
      font-size: 14px;
      line-height: 14px;
      font-family: 'Industry Demi' !important;
    }
    .header-banner .banner-item-inner p strong {
      color: #ffcc00;
    }
    .header-banner .banner-item-inner a {
      padding: 3px 0;
      font-size: 14px;
      margin-bottom: 0;
      color: #fff;
      font-weight: 900;
      line-height: 14px;
      margin-left: 8px;
      font-family: 'Industry' !important;
      display: flex;
      text-decoration: underline;
    }
    @media screen and (max-width: 1000px) {
      .header-banner .banner-item-inner a {
        padding: 3px 0px 3px 0;
      }
    }
    #open-login-modal,
    #open-signup-modal {
      font-size: 12px;
      line-height: 18px;
      text-align: center;
      text-transform: uppercase;
      font-family: 'Industry Demi' !important;
      padding: 6px 12px;
      max-height: 28px;
      min-width: unset;
    }
    #open-signup-modal {
      padding: 7px 12px;
    }
    .header-banner .banner-item-inner .badge {
      height: 27px;
    }
    .header-banner .slick-next {
      width: 48px;
      height: 48px;
      background: url("{{'right.png' | asset_img_url: '100x'}}") center no-repeat;
    }
    .header-banner .slick-prev {
      width: 48px;
      height: 48px;
      background: url("{{'left.png' | asset_img_url: '100x'}}") center no-repeat;
    }
    .header-banner .btn {
      height: 28px;
      display: inline-flex;
      justify-content: center;
    }

    .header-banner .btn.btn--transparent {
      max-width: 720px;
      margin: 0 auto;
      background: #1c1c1d !important;
      color: #fff !important;
      border: 1px solid #616060;
    }
    #open-signup-modal {
      color: #1c1c1d;
      background: #fc0 !important;
      border: 0;
    }
    #open-signup-modal:hover {
      background: #fed955 !important;
      transition: all 0.4s ease;
    }
    #open-login-modal:hover {
      background: #616060 !important;
      border: 0 !important;
      transition: all 0.4s ease;
    }
    @media screen and (max-width: 1000px) {
      .header-banner .btn-wrap {
        display: none;
      }
    }
    @media screen and (max-width: 768px) {
      .header-banner .banner-item-inner p, .header-banner .banner-item-inner a {
  	font-size: 12px;
  	padding: 3px 1px;
  }
    }
    @media screen and (max-width: 480px) {
      body .header-banner {
        height: 48px;
      }
    }
    .header-banner.fixed {
      position: fixed;
      z-index: 999;
      width: 100%;
      top: 0;
    }
    .site-header.fixed-carousel {
      padding-top: 40px;
    }
    #account-btn {
      font-weight: 700;
      text-transform: uppercase;
    }
    .slick-arrow {
      display: none !important;
    }
    .slick-list {
      display: flex;
      height: 100% !important;
      align-items: center;
    }
</style>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  $('.header-banner .banner-slider-container').slick({
    accessibility: false,
    dots: false,
    arrows: true,
    autoplay: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    autoplaySpeed: 3000,
    responsive: [
      {
        breakpoint: 415,
        settings: {
          fade: false,
          cssEase: 'ease',
        },
      },
    ],
  });
  const link = document.querySelector(".banner-item-inner[data-index='3'] a");
  const modal = document.getElementById('my-custom-modal');

  if (link && modal) {
    const modal_customer_login = document.getElementById('ModalCustomerLogin');
    const modal_customer_register = document.getElementById('ModalCustomerRegister');
    const modal_customer_recover_password = document.getElementById('ModalCustomerRecoverPassword');

    link.addEventListener('click', (event) => {
      event.preventDefault();
      event.stopImmediatePropagation();

      modal_customer_login.style.display = 'none';
      modal_customer_recover_password.style.display = 'none';
      modal_customer_register.style.display = 'block';
      modal.style.display = 'flex';
    });
  }
</script>
