{%- if section.blocks.size > 0 -%}
<section class="banner-slider container">
  {%- for block in section.blocks-%}
  <div class="image-content">
    <div class="price-text">
      <p>Start pricing from</p>
      <h2>{{block.settings.price}}</h2>
    </div>
    <img src="{{block.settings.image | img_url : "master"}}" alt="VitalGym">
    <div class="banner-home">
      <div class="right-text">
        <p>{{block.settings.description}}</p>
        <a href="{% if block.settings.url %}{{ block.settings.url }}{% else %}#contact{% endif %}" class="btn button">ENQUIRE NOW</a>
      </div>
    </div>
  </div>
  {% endfor %}
</section>

<div class="slick-navigation container">
  <div class="slick-dots-custom"></div>
<!--   <div class="slick-button slick-left"><img src="{{ 'Arrow-Left.svg' | asset_url}}" loading="lazy" class="lazyload" alt="left arrow"></div>
  <div class="slick-button slick-right"><img src="{{ 'Arrow-Right.svg' | asset_url}}" loading="lazy" class="lazyload" alt="right arrow"></div> -->

<!--  Removed Lazyload  -->
  <div class="slick-button slick-left"><img src="{{ 'Arrow-Left.svg' | asset_url}}" alt="left arrow"></div>
  <div class="slick-button slick-right"><img src="{{ 'Arrow-Right.svg' | asset_url}}" alt="right arrow"></div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Banner Home Slider",
    "settings": [],
	"max_blocks": 5,
	"blocks": [
          {
            "type": "image",
            "name": "Slide",
            "settings": [
              {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
              },
              {
              "type": "text",
              "id": "price",
              "label": "Price",
              "default": "£14,000"
              },
              {
              "type": "textarea",
              "id": "description",
              "label": "Description mobile",
              "default": "VitalGym has partnered with one of the UK’s leading garden room companies to provide you with the home gym of your dreams. With experience installing over 13,000 bespoke spaces for the home,  a 5-star rating on Trustpilot, and a free perk worth up to £1000 - you can have absolute confidence that you’ll get the best gym for your needs."
              },
              {
              "type": "url",
              "id": "url",
              "label": "Url button mobile"
              }
			]
          }
		],
	
	 "presets": [
      {
        "name": "Banner Home Slider",
        "category": "Content"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
<script>
  /*Homegym sliders*/
$(document).ready(function(){
function bannerSlider() {
  $('a.button.btn').click(function (e) {
    e.preventDefault();
    $('html, body').animate({
      scrollTop: $($.attr(this, 'href')).offset().top
    }, 500);
  })
  let $slickBanner = $('.banner-slider')
  $slickBanner.on('init', function (event, slick) {
    $('#shopify-section-banner-home-slider .slick-navigation').css('width', $('.image-content').width())
  });
  $slickBanner.slick({
    infinite: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    centerPadding: '20%',
    arrows: true,
    dots: true,
    appendDots: $('#shopify-section-banner-home-slider .slick-dots-custom'),
    prevArrow: $('#shopify-section-banner-home-slider .slick-left'),
    nextArrow: $('#shopify-section-banner-home-slider .slick-right'),
    responsive: [
      {
        breakpoint: 1080,
        centerPadding: '10px',
        settings: {
          arrows: false
        }
      }
    ]
  });
}
function stepSlider() {
  let stepSlide = $('.step-slider');
  stepSlide.slick({
    infinite: false,
    slidesToShow: 3,
    slidesToScroll: 1,
    centerPadding: '0%',
    centerMode: true,
    arrows: false,
    dots: true,
    initialSlide: 2,
    responsive: [
      {
        breakpoint: 1080,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          initialSlide: 0
        }
      }
    ]
  });
}
function reviewSlider() {
  let $slickReview = $('.reviews-slider');
  $slickReview.on('init', function (event, slick) {
    $('#shopify-section-our-case .slick-navigation').css('width', $('.review-content').width())
  });
  $slickReview.slick({
    infinite: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    centerPadding: '15%',
    centerMode: true,
    responsive: [
      {
        breakpoint: 1080,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
          centerMode: false,
          centerPadding: '5%',
          arrows: false
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          centerMode: false,
          centerPadding: '5%',
          arrows: false,
          dots: true
        }
      }
    ],
    prevArrow: $('#shopify-section-our-case .slick-left'),
    nextArrow: $('#shopify-section-our-case .slick-right')
  });
}
function gymSlider() {
  $('.home-gyms').slick({
    centerPadding: '5%',
    arrows: false,
    dots: true,
    responsive: [
      {
        breakpoint: 9999,
        settings: "unslick"
      },
      {
        breakpoint: 1080,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
}
  bannerSlider();
  stepSlider();
  reviewSlider();
  gymSlider();
});
</script>
