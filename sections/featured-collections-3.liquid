            },
            {
                "type": "image_picker",
                "id": "collection2_img",
                "label": "Collection 2 image"
            },
            {
                "type": "collection",
                "id": "collection3",
                "label": "Colection 3"
            },
            {
                "type": "image_picker",
                "id": "collection3_img",
                "label": "Collection 3 image"
            },
            {
                "type": "collection",
                "id": "collection4",
